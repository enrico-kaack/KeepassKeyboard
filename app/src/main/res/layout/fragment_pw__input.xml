<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wizard.SetUpPW">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/in_pw"
            android:layout_gravity="center_horizontal|top"
            android:password="false"
            android:singleLine="true"
            android:hint="Password"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/in_pw_repeat"
            android:layout_gravity="top|center_horizontal"
            android:hint="Repeat Password"
            android:layout_below="@+id/in_pw"
            android:layout_alignLeft="@+id/in_pw"
            android:layout_alignStart="@+id/in_pw" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/in_mpw"
            android:layout_below="@+id/in_pw_repeat"
            android:layout_alignLeft="@+id/in_pw_repeat"
            android:layout_alignStart="@+id/in_pw_repeat"
            android:layout_marginTop="50dp"
            android:hint="Master Password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/in_mpw_repeat"
            android:layout_below="@+id/in_mpw"
            android:layout_alignLeft="@+id/in_mpw"
            android:layout_alignStart="@+id/in_mpw"
            android:hint="Repeat Master Password" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_done_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_next"
        android:layout_gravity="right|bottom" />

</FrameLayout>
